        }

        .comparison-slider p {
            font-family: "Tangerine", cursive;
            font-size: 8px;
        }

        .picture--before {
            z-index: 1;
        }

        .handle {
            position: absolute;
            display: block;
            top: 50%;
            left: 50%;
            height: 120%;
            width: 2px;
            background-color: #214569;
            transform: rotate(15deg) translateY(-50%);
            transform-origin: top;
            z-index: 3;
        }

        .picture--after {
            transform: skew(-15deg);
            margin-left: -2000px;
            width: calc(50vw + 2000px);
