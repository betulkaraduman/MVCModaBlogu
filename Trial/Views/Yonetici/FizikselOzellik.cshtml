    </div>


    <div class="duzenle_1">
        @using (Html.BeginForm("F_Ozellik", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <h4>Göz ve Ten renk özelliği ekleyin</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ozellikler, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Oluştur" class="btn btn-default" style="height:30px; width:150px; background-color:#e97272;" />
                </div>
            </div>
        }

    </div>


</body>
</html>