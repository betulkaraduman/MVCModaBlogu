@model Trial.Models.KategoriResim

@{
    ViewBag.Title = "ekle";
}

<html>
<head>
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }



        .topnav {
            overflow: hidden;
            background-color: #ea9d9d;
            width: 100%;
            height: 120px;
            padding: 0px;
        }

            .topnav a {
                margin-top: 2%;
                margin-left: 5%;
                float: left;
                display: block;
                color: #cf3030;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 20px;
                font-weight: 800;
            }

                .topnav a:hover {
                    background-color: #efb7b7;
                    color: #e97272;
                }

                .topnav a.active {
                    color: #cf3030;
                }

            .topnav .search-container {
                float: right;
            }

            .topnav input[type=text] {
                padding: 6px;
                margin-top: 8px;
                font-size: 12px;
                border: none;
                width: 60%;
                height: 25px;
            }

        .search-container {
            margin-top: 2%;
            height: 40px;
        }

        .topnav .search-container button {
            height: 25px;
            float: right;
            padding: 6px 10px;
            margin-top: 8px;
            margin-right: 22%;
            background: #efb7b7;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }

            .topnav .search-container button:hover {
                background: #ccc;
            }

        #aralık {
            height: 120px;
        }

        .topnav input[type=text] {
            padding: 6px;
            margin-top: 8px;
            font-size: 17px;
            border: none;
        }


        ::-webkit-input-placeholder {
            font-size: 80%;
        }
    




        body {
            font-family: 'lato',sans-serif;
            font-size: 1.6rem;
            font-weight: 400;
            line-height: 1.5;
            background-color: #e9cbcb;
        }

        html {
            font-size: 10px;
        }

        .hizala{
            width:50%;
            height:400px;
            margin:70px;
            margin-left:200px;
        }
        .form-group{
            padding-top:25px;
        }
        #buton {
            height: 30px;
            width: 170px;
            background-color: #ea9d9d;
        }
        
       
    </style>

</head>
<body>


    <div class="topnav">

        <a href="/Yonetici/Index" class="baslık">Genel  Görünüm</a>
        <a href="/Yonetici/ekle" class="baslık">Resim Ekle</a>
        
        <div class="search-container">
            <form action="/action_page.php">
                <input type="text" placeholder="Search.." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>


    </div>


    <div class="hizala">
        @using (Html.BeginForm("ekle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="baslik">Resmin Kategorisi:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("KategoriId", (IEnumerable<SelectListItem>)ViewBag.KategoriId, htmlAttributes: new { @class = "form-control" })﻿
                        @Html.ValidationMessageFor(model => model.KategoriId, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <label class="baslik">Resim :</label>
                    <div class="col-md-10">
                        <input type="file" name="foto" , id="foto" , accept=".jpeg,.JPEG,.jpg,.png,.gif" class="form-control" />
                        @Html.ValidationMessageFor(model => model.KategoriResmi, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="baslik">Resim  Etiketleri:</label>
                    <div class="col-lg-12">
                        @Html.TextBox("Etiket")
                    </div>
                </div>

                <br />

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" id="buton" />
                </div>

            </div>

        }

    </div>
 
    
    
    
    <script>
        document.getElementById("foto").style.color = "";
    </script>


</body>
</html>
