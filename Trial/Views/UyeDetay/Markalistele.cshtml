@model IEnumerable<Trial.Models.Markalar>

@{
    ViewBag.Title = "Markalistele";
}

<h2>Markalistele</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-lg-6">
        @foreach (var item in Model)

        {
            <ul class="list-unstyled">
                <li>
                    <a href="/Member/ekle">@item.MarkaId@item.MarkaAdi</a>
                </li>

            </ul>
        }
    </div>

</div>













<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MarkaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkaDetay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkaResim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MarkaAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarkaDetay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarkaResim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MarkaId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MarkaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MarkaId })
            </td>
        </tr>
    }

</table>
