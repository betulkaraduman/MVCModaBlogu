@model IEnumerable<Trial.Models.MydataModel>
@{
    ViewBag.Title = "Ozellik";
}


<html>
<head>
    <style>

        .resim {
            float: left;
            width: 38%;
            margin-top: 30px;
        }


        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .topnav {
            overflow: hidden;
            background-color: #ea9d9d;
            width: 100%;
            height: 120px;
            padding: 0px;
        }

        .top {
            margin-top: 10px;
            margin-left: 80px;
            margin-right: 80px;
        }

        .topnav a {
            margin-top: 2%;
            margin-left: 5%;
            float: left;
            display: block;
            color: #cf3030;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 20px;
            font-weight: 800;
        }

            .topnav a:hover {
                background-color: #efb7b7;
                color: #e97272;
            }

            .topnav a.active {
                color: #cf3030;
            }

        .topnav .search-container {
            float: right;
        }

        .topnav input[type=text] {
            padding: 6px;
            margin-top: 8px;
            font-size: 12px;
            border: none;
            width: 60%;
            height: 25px;
        }

        .search-container {
            margin-top: 2%;
            height: 40px;
        }

        .topnav .search-container button {
            height: 25px;
            float: right;
            padding: 6px 10px;
            margin-top: 8px;
            margin-right: 22%;
            background: #efb7b7;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }

            .topnav .search-container button:hover {
                background: #ccc;
            }

        #a a {
            color: #551A8B;
            margin-top: 1%;
            margin-left: 1%;
            float: left;
            display: block;
            color: #cf3030;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 22px;
            font-weight: 600;
        }

        #aralık {
            height: 120px;
        }

        .topnav input[type=text] {
            padding: 6px;
            margin-top: 8px;
            font-size: 17px;
            border: none;
        }


        ::-webkit-input-placeholder {
            font-size: 80%;
        }

        body {
            font-family: 'lato',sans-serif;
            font-size: 1.6rem;
            font-weight: 400;
            line-height: 1.5;
            background-color: #e9cbcb;
        }

        html {
            font-size: 10px;
        }

        .form-group {
            padding-top: 25px;
        }

        .hizala {
            margin-left: 6%;
            margin-right: 6%;
        }

        #mobile-nav {
            display: none;
            padding-left: 10px;
            margin-top: 0;
            width: 10%;
        }

        #top-bar {
            margin-left: 12px;
            margin-top: 25px;
            width: 100%;
            box-sizing: border-box;
            padding-left: 10px;
        }

        #mobile-nav li {
            margin-left: -4px;
            padding-top: 15px;
            list-style-type: none;
            width: 150px;
            display: block;
            border-bottom: thin solid #e9cbcb;
            border-top: none;
            width: 48px;
        }

            #mobile-nav li:hover {
                width: 150px;
                background-color: #e97272;
            }

            #mobile-nav li a {
                color: black;
                font-weight: 700;
                text-decoration: none;
                display: block;
                box-sizing: border-box;
                width: 80%;
                height: 100%;
            }

        #menu-button:hover {
            cursor: pointer;
        }

        .hizalam {
            float: left;
            height: 40px;
            width: 70%;
        }
    </style>

    @*<link href="~/Css/MarkalarIndex.css"  rel="stylesheet"/>*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700" rel="stylesheet">
    <link href="~/Css/StyleSheet1.css" rel="stylesheet" />
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <meta name="viewport" content="widht=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="" />




</head>
<body>


    <div class="hizalam">
        <div class="container">
            <div id="top-bar">
                <img id="menu-button" src="http://mattdesimini.com/images/howtoweb/menu.png" style="width:34px">
            </div>
            <ul id="mobile-nav">
                <li><a href="@Url.Action("MakyajOlustur","UyeDetay",new { id = Session["UserId"] })" style="margin-left:15px;margin-bottom:10px;">Makyaj</a></li>
                <li><a href="@Url.Action("MarkaOlustur","UyeDetay",new {id=Session["UserId"],Name=Session["Name"],Username=Session["Username"]})" class="smoothScroll" style="margin-left:15px;margin-bottom:10px;">Markan</a></li>
                <li><a href="@Url.Action("FizikselOzellik","UyeDetay",new { id = Session["UserId"] })" style="margin-left:15px;margin-bottom:10px;">Özelliklerin</a></li>
                <li><a href="@Url.Action("Guncelle","Member",new {id=Session["UserId"]})" style="margin-left:15px;margin-bottom:10px;">Güncelle</a></li>
                <li><a href="@Url.Action("BegeniGetirme","Member",new {id=Session["UserId"]})" style="margin-left:15px;margin-bottom:10px;">Kaydettiklerim</a></li>

            </ul>
        </div>
    </div>
    <div class="hizalam" style="margin-left:-650px; margin-top:20px;">
        <a href="@Url.Action("Index","Member",new { id = Session["UserId"] })" class="smoothScroll" id="a" style="font-size:25px; margin-left:10px;margin-top:-15px; text-decoration:none;">Anasayfa</a>
        <a href="@Url.Action("Begeni","Member",new { id = Session["UserId"] })" class="smoothScroll" id="a" style="font-size:25px; margin-left:40px;margin-top:-15px; text-decoration:none;">Kombinler</a>
        <a href="@Url.Action("YorumEkle","Member",new {id=Session["UserId"] } )" class="baslık" style="font-size:25px; margin-left:40px; text-decoration:none; margin-top:-14px;">Yorum</a>
        <a href="@Url.Action("OzellikDetay","Member",new {id=Session["UserId"]})" class="smoothScroll" id="a" style="font-size:25px; margin-left:40px;margin-top:-15px; text-decoration:none;">Goz Ten detay</a>
        <a href="@Url.Action("Cıkıs","Member")" class="baslık" style="font-size:25px; margin-left:40px; text-decoration:none; margin-top:-14px;" id="a">Cıkış</a>

    </div>


    <div style="height:100px; width:100%;"></div>
    <div class="hizala">
        @foreach (var item in Model)
        {

            if (ViewBag.UserId == item.UserId.ToString())
            {



                <div style="margin-top:50px;">
                    <h2>@item.MarkaAdi</h2>
                </div>

                <div style="margin-top:50px;">@item.MarkaDetay</div>

                <br />
                <br />
                <div style="width:1000px; height:500px;margin-left:200px;">
                    <div class="resim">
                        <img src="@item.MarkaResim" alt="" style="width:300px;height:220px; border-radius:10px; " />
                    </div>
                    <div class="resim">
                        <img src="@item.Foto1" alt="" style="width:300px;height:220px; border-radius:10px; " />
                    </div>

                    <div class="resim">
                        <img src="@item.Foto2" alt="" style="width:300px;height:220px; border-radius:10px; " />
                    </div>
                    <div class="resim">
                        <img src="@item.Logo" alt="" style="width:300px;height:220px; border-radius:10px; " />
                    </div>
                </div>

            }


        }

    </div>





    <script src="./js/comparison-slider.js"></script>
    <script>
        /*Hide menu by default*/
        $("#menu").hide();

        /*When menu button is clicked, toggle the menu*/
        $("#menu-btn").click(function () {
            $("#menu").slideToggle();
        });

    </script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let comparisonSlider = document.getElementById('comparison-slider');
            let pictureAfter = comparisonSlider.querySelector('.picture--after');
            let handle = comparisonSlider.querySelector('.handle');
            let skew = 0;
            let delta = 0;

            if (comparisonSlider.className.indexOf('comparison-slider') != -1) { //if our section has a class ‘comparison-slider’
                skew = 2000;
            }

            comparisonSlider.addEventListener('mousemove', function (e) {
                delta = (e.clientX - window.innerWidth / 2) * 0.5; // distance between the mouse and the center of the section
                handle.style.left = e.clientX + delta + 'px'; // change handle position
                pictureAfter.style.width = e.clientX + skew + delta + 'px'; // change width of pictureAfter
            });
        });
    </script>


    <script>
        $(function () {
            $("#menu-button").click(function () {
                $("#mobile-nav").toggle('display');
            });
        });
    </script>


</body>
</html>
