    @using (Html.BeginForm("MarkaEkle", "Yonetici", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        @Html.AntiForgeryToken()

    <div class="icerik" style="padding-left:100px;padding-top:20px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="hizalam">

            <div class="form-group">
                <h4>Markanın İsmi : </h4>
                <div class="col-md-10">
                    <span class="isim">@Html.EditorFor(model => model.MarkaAdi, new { htmlAttributes = new { @class = "form-control" } }) </span>
                </div>
            </div>

            <div class="form-group">
                <h4>Markanın Detayları :</h4>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.MarkaDetay, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <h4>Markanın Resim :</h4>

                <div class="col-md-10">
                    <input type="file" name="foto" , id="foto" , accept=".jpeg,.JPEG,.jpg,.png,.gif" class="form-control" />
                    @Html.ValidationMessageFor(model => model.MarkaResim, "", new { @class = "Burda" })
                </div>
            </div>
        </div>

        <div class="hizalam">
            <div class="form-group">
                <h4>Ek Resim1 :</h4>

                <div class="col-md-10">
                    <input type="file" name="foto1" , id="foto1" , accept=".jpeg,.JPEG,.jpg,.png,.gif" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Foto1, "", new { @class = "Burda" })
                </div>
            </div>
            <div class="form-group">
                <h4>Ek Resim2 :</h4>

                <div class="col-md-10">
                    <input type="file" name="foto2" , id="foto2" , accept=".jpeg,.JPEG,.jpg,.png,.gif" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Foto2, "", new { @class = "Burda" })
                </div>
            </div>

            <div class="form-group">
                <h4>Marka Logusu :</h4>

                <div class="col-md-10">
                    <input type="file" name="Logo" , id="Logo" , accept=".jpeg,.JPEG,.jpg,.png,.gif" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "Burda" })
                </div>
            </div>

        </div>
    </div>
            <div class="form-group" style="margin-top:280px; margin-left:310px; width:100px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ekle" class="btn btn-default" style="width:240px; height:40px; background-color: #ea9d9d; font-size:16px; font-weight:500" />
                </div>
            </div>
     
        }


</body>
