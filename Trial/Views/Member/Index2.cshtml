            position: absolute;
            width: 100vw;
            min-height: 60vw;
        }

        .picture__content {
            position: absolute;
            width: 25%;
            top: 20%;
            left: 7%;
            padding: 2.5%;
            text-align: center;
            z-index: 41;
        }

        .picture--before .picture__content {
            background-color: rgba(34, 34, 34, 0.75);
            color: #fff;
        }

        .picture--after .picture__content {
            background-color: rgba(240, 248, 255, 0.75);
            color: #222;
        }

        .picture img {
            position: absolute;
            display: block;
            width: 100%;
            top: 0;
            left: 0;
        }

        .comparison-slider h3 {
